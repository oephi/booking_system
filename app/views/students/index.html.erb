<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class="table">
  <thead>
    <tr>
      <th>Concession</th>
      <th>Name</th>
      <th>Email</th>
      <th>Cabin</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.concession %></td>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.cabin %></td>
        <td><%= student.paid %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if @course_id %>
<%= link_to 'New Student', new_course_student_path(course_id: @course_id) %>
<%else%>
<%= link_to 'New Student', new_student_path %>
<%end%>
